      <script>
      document.addEventListener("DOMContentLoaded", async () => {
        // Radar Chart
        try {
          const response = await fetch('/radarChartData');
          const radarChartData = await response.json();
          var radarChart = echarts.init(document.querySelector("#budgetChart"));
          var radarOptions = {
            legend: { data: ['Total Tickets', 'Sold tickets'] },
            radar: {
              indicator: [
                { name: radarChartData.categories[0], max: 6500 },
                { name: radarChartData.categories[1], max: 16000 },
                { name: radarChartData.categories[2], max: 30000 },
                { name: radarChartData.categories[3], max: 38000 },
                { name: radarChartData.categories[4], max: 52000 },
                { name: radarChartData.categories[5], max: 25000 }
              ]
            },
            series: [{
              name: 'Total Tickets vs Sold tickets',
              type: 'radar',
              data: [
                { value: radarChartData.totalTicketsData, name: 'Total Tickets' },
                { value: radarChartData.soldTicketsData, name: 'Sold tickets' }
              ]
            }]
          };
          radarChart.setOption(radarOptions);
        } catch (error) {
          console.error('Error fetching or rendering radar chart:', error);
        }
      
        // Sales Line Chart
        try {
          const response = await fetch('/salesLineChartData');
          const salesLineChartData = await response.json();
          var salesLineChart = echarts.init(document.querySelector("#salesLineChart"));
          var salesLineOptions = {
            xAxis: {
              type: 'category',
              data: salesLineChartData.dates
            },
            yAxis: {
              type: 'value'
            },
            series: [{
              data: salesLineChartData.sales,
              type: 'line'
            }]
          };
          salesLineChart.setOption(salesLineOptions);
        } catch (error) {
          console.error('Error fetching or rendering sales line chart:', error);
        }
      
        // Doughnut Chart
        echarts.init(document.querySelector("#trafficChart")).setOption({
          tooltip: { trigger: 'item' },
          legend: { top: '5%', left: 'center' },
          series: [{
            name: 'Access From',
            type: 'pie',
            radius: ['40%', '70%'],
            avoidLabelOverlap: false,
            label: { show: false, position: 'center' },
            emphasis: {
              label: { show: true, fontSize: '18', fontWeight: 'bold' }
            },
            labelLine: { show: false },
            data: [
              { value: 1048, name: 'Likangala' },
              { value: 735, name: 'Muluma' },
              { value: 580, name: 'Domasi' },
              { value: 484, name: 'Chingale' },
              { value: 300, name: 'Namilongo' }
            ]
          }]
        });
      
        // Bar Graph
        try {
          const response = await fetch('/barGraphData');
          const barGraphData = await response.json();
          var barGraph = echarts.init(document.querySelector("#barGraph"));
          var barOptions = {
            xAxis: {
              type: 'category',
              data: ['Likangala', 'Domasi', 'Chingale', 'Muluma', 'Namilongo', 'Forgotten']
            },
            yAxis: {
              type: 'value'
            },
            series: [{
              data: barGraphData.payments,
              type: 'bar'
            }]
          };
          barGraph.setOption(barOptions);
        } catch (error) {
          console.error('Error fetching or rendering bar graph:', error);
        }
      });
