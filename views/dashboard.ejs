<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ADMIN Dashboard</title>

  <link rel="stylesheet" type="text/css" href="styles.css">
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>

<body>

  <h1>TICKETING ADMIN Dashboard</h1>
  
  <div id="searchBar">
    <!-- Add Font Awesome search icon here -->
    <i class="fas fa-search"></i>
    
    <label for="searchInput">Search:</label>
    <input type="text" id="searchInput" placeholder="Enter name or User ID">
    <button id="searchButton">Search</button>
  </div>

  <!-- District dropdown dynamically added here -->
  <label for="district_name">District:</label>
  <select id="district_name" name="district_name" required></select>

  <!-- Market dropdown dynamically added here -->
  <label for="market_name">Market:</label>
  <select id="market_name" name="market_name" required></select>

  <table id="userTable">
    <thead>
      <tr>
        <th>User ID</th>
        <th>User Name</th>
        <th>Payment Status</th>
        <th>Market Name</th>
        <th>Market Row Number</th>
        <th>Position</th>
        <th>Neighbor Name</th>
      </tr>
    </thead>
    <tbody id="userTableBody">
      <!-- User details will be dynamically added here -->
    </tbody>
  </table>

  <!-- Button to add vendor -->
  <button id="addVendorButton">Register Vendor</button>

  <!-- User Registration Form (initially hidden) -->
  <div id="registrationForm" style="display: none;">
    <h1>User Registration</h1>
    <form action="/register" method="post">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>

      <!-- District dropdown dynamically added here -->
      <label for="registration_district_name">District:</label>
      <select id="registration_district_name" name="district_name" required></select>

      <label for="market_name">Market:</label>
      <input type="text" id="registration_market_name" name="market_name" required>

      <label for="markert_row_no">Market Row Number:</label>
      <input type="text" id="markert_row_no" name="markert_row_no" required>

      <label for="position">Position:</label>
      <input type="number" id="position" name="position" required>

      <label for="neighbor_name">Neighbor:</label>
      <input type="text" id="neighbor_name" name="neighbor_name" required>

      <button type="submit">Submit</button>
    </form>
  </div>

<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<!-- Include Socket.IO -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.2/socket.io.js"></script>

<!-- Include your custom script -->
<script src="script.js"></script>
 
</body>

</html>
