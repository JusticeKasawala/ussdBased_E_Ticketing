 <script>
  document.getElementById('registration-form').addEventListener('submit', async (event) => {
    event.preventDefault();

    const username = document.getElementById('username').value;
    const email = document.getElementById('email').value;
    const districtName = document.getElementById('registration_district_name').value;
    const marketName = document.getElementById('registration_market_name').value;
    const password = document.getElementById('password').value;

    if (!username || !email || !districtName || !marketName || !password) {
      const errorElement = document.getElementById('error-message');
      errorElement.textContent = 'Please fill in all fields.';
      errorElement.style.display = 'block';
      return;
    }

    try {
      const response = await fetch('/add-admin', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          username,
          email,
          district_name: districtName,
          market_name: marketName,
          password
        }),
      });

      if (!response.ok) {
        const errorData = await response.json();
        throw new Error(errorData.message);
      }

      const data = await response.json(); // Parse the response JSON data
      
      const responseMessage = document.getElementById('responseMessage');
responseMessage.innerHTML = `
  <p>Admin registered successfully!</p>
  <p>Admin Name: ${data.username}</p>
  <p>Admin Email: ${data.email}</p>
  <p>Default PIN: ${data.defaultPIN}</p>
`;
responseMessage.style.display = 'block';

    } catch (error) {
      const errorElement = document.getElementById('error-message');
      errorElement.textContent = 'An error occurred. Please try again later.';
      errorElement.style.display = 'block';
    }
  });

  // Example JavaScript code to handle dropdown selection and update hidden input fields
  document.getElementById('registration_district_name').addEventListener('change', function() {
    const selectedSubofficeId = this.value; // Get the selected suboffice ID from the dropdown
    document.getElementById('selected_suboffice_id').value = selectedSubofficeId; // Update the hidden input field
  });

  document.getElementById('registration_market_name').addEventListener('change', function() {
    const selectedMarketId = this.value; // Get the selected market ID from the dropdown
    document.getElementById('selected_market_id').value = selectedMarketId; // Update the hidden input field
  });
</script>

 
